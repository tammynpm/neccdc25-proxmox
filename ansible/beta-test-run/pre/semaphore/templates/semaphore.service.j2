[Unit]
Description=Semaphore UI
Documentation=https://semaphoreui.com/docs
Wants=network-online.target
After=network-online.target
ConditionPathExists=/usr/bin/semaphore
ConditionPathExists={{ semaphore_config_dir }}/config.json

[Service]
ExecStart=/usr/bin/semaphore server --config {{ semaphore_config_dir }}/config.json
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=10s
User={{ semaphore_user }}
Group={{ semaphore_group }}
Type=simple

[Install]
WantedBy=multi-user.target
