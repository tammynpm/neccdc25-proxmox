upstream kubernetes_backend_http {
    server 10.37.33.20:30080; #node3
    server 10.37.33.9:30080; #ctrlplane
    server 10.37.33.19:30080; #node1
    server 10.37.33.18:30080; #node2
}

upstream kubernetes_backend_https {
    server 10.37.33.20:30443; #node3
    server 10.37.33.9:30443; #ctrlplane
    server 10.37.33.19:30443; #node1
    server 10.37.33.18:30443; #node2
}

server {
    listen 80;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_pass http://kubernetes_backend_http;
    }
}

server {
    listen 443;

    ssl_certificate     /etc/ssl/certs/fullchain.crt;
    ssl_certificate_key /etc/ssl/certs/private.key;

    ssl on;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_pass https://kubernetes_backend_https;
    }
}
